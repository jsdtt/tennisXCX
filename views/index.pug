extends layout

block content
  //- h1= title
  //- p Welcome to #{title}
  body.hold-transition.login-page
    div.login-box
      div.login-logo
        a: b Admin
      div.login-box-body
        p.login-box-msg 登录你的账户来进行管理
        form(action="/home", method="get")
          div.form-group.has-feedback
            input(type="email"
                  class="form-control"
                  placeholder="Email"
                )
          div.form-group.has-feedback
            input(type="password"
                  class="form-control"
                  placeholder="Password")
          div.row
            div.col-xs-4
              button(type="submit", class="btn btn-primary btn-block btn-flat") 登录
